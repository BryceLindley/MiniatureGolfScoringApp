<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3ca73a" />
            <gradient android:angle="-90" android:startColor="#1d681f" android:endColor="#49a95b"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#52975a" />
            <solid android:color="#78d98b"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#63de82" />
            <gradient android:angle="-90" android:startColor="#3e974c" android:endColor="#38a947" />
        </shape>
    </item>
</selector>